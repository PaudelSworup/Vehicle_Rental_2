<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/card_color"
    >

    <RelativeLayout
        android:id="@+id/Admin_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/grid">

        <ImageView
            android:id="@+id/UserImage"
            android:layout_width="150dp"
            android:layout_height="165dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/UserImage">


            <TextView
                android:id="@+id/UserNameTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textAlignment="textStart"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-black"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/UserDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/UserNameTxt"
                android:textAlignment="textStart"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/UserRentalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/UserDestination"
                android:textAlignment="textStart"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/UserFirebaseID"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/UserRentalTime"
                android:textAlignment="textStart"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/UserDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/UserFirebaseID"
                android:textAlignment="textStart"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="13sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/UserImage"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/layout_like"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    tools:ignore="UselessParent">


                    <TextView
                        android:id="@+id/approvedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textAlignment="center"
                        android:text="Your request has been approved!"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />




                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>



